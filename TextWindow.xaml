        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zametki"
        mc:Ignorable="d"
        Title="Заметка текстовая" Height="441" Width="233">
    <Grid>
        <TextBox x:Name="TB_Ti" Height="20" VerticalAlignment="Top">Заголовок(Введите)</TextBox>
        <TextBox AcceptsReturn="True" x:Name="TB" Margin="0 ,20, 0, 0"/>
        <Button x:Name="btn_save" Width="106" Height="20" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="btn_save_Click" Margin="0,0,104,20">Сохранить</Button>
    </Grid>
</Window>
